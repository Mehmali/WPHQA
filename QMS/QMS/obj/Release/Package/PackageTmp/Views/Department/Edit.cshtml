
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-full">
                <div class="bg-gray-200 px-2 py-3 border-solid border-gray-200 border-b">
                    Edit Department
                </div>
                <div class="p-3">
                    <form class="w-full" method="post" action="@Url.Content("~/Department/Edit")">
                        <input type="hidden" name="Id" value="@ViewBag.department.Id" />
                        <input type="hidden" name="CreatedBy" value="@ViewBag.department.CreatedBy" />
                        <input type="hidden" name="CreatedOn" value="@ViewBag.department.CreatedOn" />
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Dept_Code">
                                    Code
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white-500"
                                       id="Dept_Code" name="Dept_Code" type="text" placeholder="Enter Code" value="@ViewBag.department.Dept_Code">
                                <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Dept_Name">
                                    Department Name
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                       id="Dept_Name" name="Dept_Name" type="text" placeholder="Enter Title" value="@ViewBag.department.Dept_Name">
                                <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                            </div>

                        </div>

                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="CompId">
                                    Company
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="CompId" name="CompId">
                                    <option>Select Company</option>
                                    <option value="1" @(ViewBag.Department.CompId == "1" ? "Selected" : "")>Spinning</option>
                                    <option value="2" @(ViewBag.Department.CompId == "2" ? "Selected" : "")>Weaving</option>
                                    <option value="3" @(ViewBag.Department.CompId == "3" ? "Selected" : "")>Finishing</option>
                                    <option value="4" @(ViewBag.Department.CompId == "4" ? "Selected" : "")>Fabrication</option>
                                    <option value="5" @(ViewBag.Department.CompId == "5" ? "Selected" : "")>Corporate</option>

                                </select>

                            </div>

                        </div>
                        <div class="md:flex md:items-right">
                            <div class="md:w-2/3">
                                <button type="submit" class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                                    Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>

