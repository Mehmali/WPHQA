    })


    $('#Location').change(function () {
        //alert($(this).val());
        var countryId = $(this).val();
        var Url = '@Url.Content("~/Site/ListSitesByCountry/")' + countryId;
       
        //alert(Url);
        $.ajax({
            url: Url,
            type: 'GET',
            success: function (response) {
                //alert(response);
                $('#Site_Id').html(response);
            },
            error: function () {
                //alert('Error');
            }

        });
       
    });

</script>
