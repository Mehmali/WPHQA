
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.structure.css" rel="stylesheet" />
    <link href="~/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.theme.css" rel="stylesheet" />
    <title>Test</title>

    <style>
        .ui-datepicker {
            background: #5c7682;
            border: 1px solid blue;
            color: black
        }
    </style>
</head>

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2 ">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-2/3 ml-24 ">
                <div class="bg-gray-400 px-2 py-3 border-solid border-gray-800 border-b text-2xl">
                    Employee Objective
                </div>

                <div class="flex flex-wrap m-3 mb-6">
                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">

                        <img src="~/Templates/admin/dist/images/WPHLogo.png" />
                    </div>

                    <div class="w-full md:w-1/2 px-3  md:mb-0 font-bold">
                        <br />
                        <p style="font-size:24px; margin:5px; text-align:right"> Objectives and Results</p>
                    </div>
                </div>
                <hr />
                <div class="p-3">
                    <div class="flex flex-wrap -mx-3 mb-6">
                        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                            <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                   for="Emp_Code">
                                Employee Code
                            </label>
                            <input class="appearance-none block w-full bg-white text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                   id="Emp_Code" name="Emp_Code" type="text" placeholder="Enter Employee Code" autocomplete="off" onblur="fetchEmployeeDetails(this.value)">
                            @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                        </div>
                        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                            <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                   for="AppraisalYear">
                                Year
                            </label>
                            <input disabled class="appearance-none block w-full bg-white text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                   id="AppraisalYear" name="AppraisalYear" value="@(DateTime.Now.Year)" type="text" placeholder="Enter Employee Code" autocomplete="off">
                            @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                        </div>
                    </div>

                    @Html.Partial("AppraisalEmployee")


                    @*<p class="text-red-500 text-xs italic">Managarial Section</p>*@

                    <hr />
                    @Html.Partial("AppraisalManager")

                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>
<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('.dateFormate').datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
            showOtherMonths:true
        });

        $('.nemericVal').keypress(function (e) {
            var inputValue = $(this).val();
            if (!isDecimalValue(inputValue,event)) {
                return false;
            }

           //return isNumber(event);


        });

        $('#save').click(function () {

            $('#addForm').validate({

                rules: {
                    Description: {
                        required: true
                    },

                    Email: {
                        required: true,
                        Email: true
                    }
                },
                messages: {
                    Description: {
                        required: "Please fill with description"
                    },

                    Email: {
                        required: "Please enter email address",
                        Email: "Please enter valid email"
                    }
                },
                highlight: function (element) {
                    $(element).addClass('redBorder').removeClass('border border-red-500');
                },
                unhighlight: function (element) {
                    $(element).removeClass('redBorder').addClass('border border-red-500');
                }

            });
            validateCountry();




        });
    });



    $('#Country_Id').change(function () {
        //alert($(this).val());

        var countryId = $(this).val();
        var Url = '@Url.Content("~/City/List/")' + countryId;
        //alert(Url);
        $.ajax({
            url: Url,
            type: 'GET',
            success: function (response) {
                //alert(response);
                $('#City_Id').html(response);
            },
            error: function () {
                //alert('Error');
            }

        });
        validateCountry();
    });

    function validateCountry() {
        var selectedCountry = $('#Country_Id').val();
        if (selectedCountry == 'Select Country') {
            $('#Country_Id').addClass('redBorder').removeClass('border border-red-500 focus:border-gray-600');
            $('#countryErr').removeClass('hide');
            return false;
        }
        else {
            $('#Country_Id').removeClass('redBorder').addClass('border border-red-500 ');
            $('#countryErr').addClass('hide');
            return true;
        }
    }

    function fetchEmployeeDetails(Code) {
        //alert(Code);

        var Url = '@Url.Content("~/Employee/Detail")' ;
        //alert(Url);
        $.ajax({
            url: Url,
            type: 'GET',
            data: {code : Code},
            success: function (response) {
                var data = JSON.parse(response);
                //alert(data.FirstName);
                $('#Emp_Name').val(data.FirstName + ' ' + data.LastName);
                $('#Emp_Title').val(data.JobTitle);
            },
            error: function () {
                //alert('Error');
            }

        });

    }

    function showUserBlock(obj) {
        //alert($(obj).prop("checked"));
        if ($(obj).prop("checked") == true) {
            $('#userInfo').show();
        }
        else {
            $('#LoginId').val('');
            $('#Password').val('');
            $('#userInfo').hide();
        }
    }
</script>
