            <div class="p-3">
                <table class="table-responsive w-full rounded">
                    <thead class="bg-gray-500 text-white text-xs">
                        <tr>
                            <th class="border w-1/12 px-1 py-2">@Html.ActionLink("Emp_Code", "ListNLAssociates", new { sortOrder = ViewBag.sortOrder == null ? "Desc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Emp_Code" })</th>
                            <th class="border w-2/12 px-1 py-2">@Html.ActionLink("Employee Name", "ListNLAssociates", new { sortOrder = ViewBag.sortOrder == null ? "Desc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Emp_Name" })</th>
                            <th class="border w-2/12 px-1 py-2 text-center">Title</th>
                            @*<th class="border w-1/12 px-2 py-2 text-center">Supervisor</th>*@
                            <th class="border w-1/12 px-1 py-2 text-center">@Html.ActionLink("Supervisor", "ListNLAssociates", new { sortOrder = ViewBag.sortOrder == null ? "Desc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Manager_Name" })</th>
                            <th class="border w-1/12 px-1 py-2 text-center">Location</th>
                            <th class="border w-1/12 px-1 py-2 text-center">@Html.ActionLink("Year", "ListNLAssociates", new { sortOrder = ViewBag.sortOrder == null ? "Desc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "AppraisalYear" })</th>
                            <th class="border w-1/12 px-1 py-2 text-center">Qtr</th>
                            <th class="border w-1/12 px-1 py-2 text-center">@Html.ActionLink("Status", "ListNLAssociates", new { sortOrder = ViewBag.sortOrder == null ? "Desc" : (ViewBag.sortOrder == "Asc" ? "Desc" : "Asc"), sortBy = "Status" })</th>
                            <th class="border w-2/12 px-1 py-2 text-center">Performance Rating</th>
                            <th class="border w-2/12 px-1 py-2 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Appraisals != null && ViewBag.Appraisals.Count > 0)
                        {
                            foreach (var Appraisal in ViewBag.Appraisals)
                            {
                                <tr>
                                    <td class="border px-1 py-2 text-xs text-center">@Appraisal.Emp_Code</td>
                                    <td class="border px-1 py-2 text-xs ">@Appraisal.Emp_Name</td>
                                    <td class="border px-1 py-2 text-xs ">@Appraisal.Emp_Title</td>
                                    <td class="border px-1 py-2 text-xs ">@Appraisal.Manager_Name</td>
                                    @*<td class="border px-4 py-2 text-xs">@(Managers.Where(x => x.Id.Equals(Appraisal.Manager_Id)).FirstOrDefault().FirstName + " " + Managers.Where(x => x.Id.Equals(Appraisal.Manager_Id)).FirstOrDefault().LastName)</td>*@
