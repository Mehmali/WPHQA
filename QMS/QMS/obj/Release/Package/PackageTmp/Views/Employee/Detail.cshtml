@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2 ">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-2/3 ml-24 ">
                <div class="bg-gray-400 px-2 py-3 border-solid border-gray-800 border-b text-2xl">
                    Employee Detail
                </div>

                <div class="p-4 text-sm">

                    <input type="hidden" name="Id" value="@ViewBag.Employee.Id" />
                    <div class="row">
                        <div class="col-md-2">
                            <label class="inline">
                                Code:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Employee.Code
                            </label>
                        </div>

                        <div class="col-md-2">
                            <label class="inline">
                                Job Title:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.JobTitle
                            </label>

                        </div>

                        
                    </div>

                    <div class="row">

                        <div class="col-md-2">
                            <label class="inline">
                                First Name:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Employee.FirstName
                            </label>

                        </div>
                        <div class="col-md-2">
                            <label class="inline">
                                Last Name:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Employee.LastName
                            </label>

                        </div>

                    </div>


                    <div class="row">
                        <div class="col-md-2">
                            <label class="inline">
                                DOB:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Employee.DOB
                            </label>
                        </div>


                        <div class="col-md-2">
                            <label class="inline">
                                Hire Date:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Employee.HireDate
                            </label>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <label class="inline">
                                Country:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.Country
                            </label>

                        </div>
                        <div class="col-md-2">
                            <label class="inline">
                                City:
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="inline">
                                @ViewBag.City
                            </label>

                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="md:flex md:items-right">
                            <div class="md:w-2/6">
                                <a class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded text-decoration-none mr-2" href="@Url.Content("~/Employee/Edit/"+ViewBag.Employee.Id)">
                                    Edit
                                </a>
                                <a class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded text-decoration-none " href="@Url.Content("~/Employee/List")">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
       
        </div>
        <!--/Grid Form-->
    </div>
</main>

<script type="text/javascript">
    $(document).ready(function () {

        $('div label').parent('div').addClass('py-2');
    })

</script>


