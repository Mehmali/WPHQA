

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout.cshtml";
    var ComplaintMainType = (QMS.Data.ComplaintMainType)ViewBag.ComplaintMainType;
    var Departments = (List<QMS.Data.Department>)ViewBag.Departments;

}

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2 ">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-2/3 ml-24 ">
                <div class="bg-gray-400 px-2 py-3 border-solid border-gray-800 border-b text-2xl">
                    Update Compliant Main Type
                </div>

                <div class="p-3">
                    <form name="editForm" id="editForm" class="w-full" method="post" action="@Url.Content("~/ComplaintMainType/Edit")">
                        <input type="hidden" name="Id" value="@ComplaintMainType.Id" />
                       
                        <input type="hidden" name="CreatedOn" value="@ComplaintMainType.CreatedOn" />
                        <input type="hidden" name="CreatedBy" value="@ComplaintMainType.CreatedBy" />
                       
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Employee">
                                    Department
                                </label>
                                <select disabled class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="Dept_Id" name="Dept_Id">
                                    <option>@(Departments.Where(x=>x.Id.Equals(ComplaintMainType.Dept_Id)).FirstOrDefault().Dept_Name)</option>

                                </select>
                                <input type="hidden" name="Dept_Id" value="@ComplaintMainType.Dept_Id" />
                                @*<p id="jobtitleErr" class="error mt-1 hide">Please select the job title.</p>*@
                            </div>

                        </div>


                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="MainType">
                                    Miant Type Description
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="MainType" name="MainType" type="text" value="@ComplaintMainType.MainType">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>

                        </div>

                       

                        <div class="md:flex md:items-right">
                            <div class="md:w-2/3">
                                <button type="submit" id="save" class="test shadow bg-green-500 hover:bg-green-800 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                                    Save
                                </button>
                                <a class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded text-decoration-none" href="@Url.Content("~/ComplaintMainType/List")">
                                    Cancel
                                </a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>

