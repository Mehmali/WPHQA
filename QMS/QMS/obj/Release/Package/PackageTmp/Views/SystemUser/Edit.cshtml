

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2 ">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-2/3 ml-24 ">
                <div class="bg-gray-400 px-2 py-3 border-solid border-gray-800 border-b text-2xl">
                    Update Employee
                </div>

                <div class="p-3">
                    <form name="editForm" id="editForm" class="w-full" method="post" action="@Url.Content("~/Employee/Edit")">
                        <input type="hidden" name="Id" value="@ViewBag.Employee.Id" />
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Code">
                                    Code
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="Code" name="Code" type="text" placeholder="Enter Code" value="@ViewBag.Employee.Code">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="FirstName">
                                    First Name
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="FirstName" name="FirstName" type="text" placeholder="Enter First Name" value="@ViewBag.Employee.FirstName">
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="MiddleName">
                                    Middle Name
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="MiddleName" name="MiddleName" type="text" placeholder="Enter Middle Name" value="@ViewBag.Employee.MiddleName">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="LastName">
                                    Last Name
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="LastName" name="LastName" type="text" placeholder="Enter Last Name" value="@ViewBag.Employee.LastName">
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="DOB">
                                    DOB
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="DOB" name="DOB" type="date" placeholder="Enter DOB" value="@(Convert.ToDateTime(ViewBag.Employee.DOB))">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="HireDate">
                                    Hire Date
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="HireDate" name="HireDate" type="datetime" placeholder="Enter Hire Date" value="@((DateTime)(ViewBag.Employee.HireDate))">
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="JobTitle">
                                    Job Title
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="JobTitle_Id" name="JobTitle_Id">
                                    <option>Select Job Title</option>
                                    @foreach (var jobTitle in ViewBag.JobTitles)
                                    {
                                        <option value="@jobTitle.Id" @(jobTitle.Id == ViewBag.Employee.JobTitle_Id ? "selected" : "")>@(jobTitle.Title)</option>
                                        @*<option value="@country.Id" @(country.Id == vcountry.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>*@
                                    }
                                </select>
                                @*<p id="jobtitleErr" class="error mt-1 hide">Please select the job title.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Department">
                                    Department
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="Department_Id" name="Department_Id">
                                    <option>Select Department</option>
                                    @foreach (var department in ViewBag.Departments)
                                    {
                                        <option value="@department.Id" @(department.Id == ViewBag.Employee.Department_Id ? "selected" : "")>@(department.Name + "[" + department.Code + "]")</option>
                                        @*<option value="@country.Id" @(country.Id == vcountry.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>*@
                                    }
                                </select>
                                @*<p id="countryErr" class="error mt-1 hide">Please select the department.</p>*@
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Site">
                                    Site
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="Site_Id" name="Site_Id">
                                    <option>Select Site</option>
                                    @foreach (var site in ViewBag.Sites)
                                    {
                                        <option value="@site.Id" @(site.Id == ViewBag.Employee.Site_Id ? "selected" : "")>@(site.Description)</option>
                                        @*<option value="@country.Id" @(country.Id == vcountry.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>*@
                                    }
                                </select>
                                @*<p id="jobtitleErr" class="error mt-1 hide">Please select the job title.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Email">
                                    Email
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="Email" name="Email" type="text" placeholder="Enter Email" value="@ViewBag.Employee.Email">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Fax">
                                    Fax
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="Fax" name="Fax" type="text" placeholder="Enter Fax" value="@ViewBag.Employee.Fax">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="HomePhone">
                                    Home Phone
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="HomePhone" name="HomePhone" type="text" placeholder="Enter Home Phone" value="@ViewBag.Employee.HomePhone">
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="CellPhone">
                                    Cell Phone
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="CellPhone" name="CellPhone" type="text" placeholder="Enter Cell Phone" value="@ViewBag.Employee.CellPhone">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="AddressLine1">
                                    Address Line1
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="AddressLine1" name="AddressLine1" type="text" placeholder="Enter Address Line1" value="@ViewBag.Employee.AddressLine1">
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="AddressLine2">
                                    Address Line2
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="AddressLine2" name="AddressLine2" type="text" placeholder="Enter Address Line2" value="@ViewBag.Employee.AddressLine2">
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="Country">
                                    Country
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="Country_Id" name="Country_Id">
                                    <option>Select Country</option>
                                    @foreach (var country in ViewBag.Countries)
                                    {
                                        <option value="@country.Id" @(country.Id == ViewBag.Employee.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>
                                        @*<option value="@country.Id" @(country.Id == vcountry.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>*@
                                    }
                                </select>
                                <p id="countryErr" class="error mt-1 hide">Please select the country.</p>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3 mb-6">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="City">
                                    City
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="City_Id" name="City_Id">
                                    <option>Select City</option>
                                    @foreach (var city in ViewBag.Cities)
                                    {
                                        <option value="@city.Id" @(city.Id == ViewBag.Employee.City_Id ? "selected" : "")>@(city.Name + "[" + city.Code + "]")</option>
                                    }
                                </select>
                                @*<p class="text-red-500 text-xs italic">Please fill out this field.</p>*@
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="ZipCode">
                                    Zip Code
                                </label>
                                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-1 leading-tight focus:outline-none focus:bg-white-500"
                                       id="ZipCode" name="ZipCode" type="text" placeholder="Enter Zip Code" value="@ViewBag.Employee.ZipCode">
                            </div>
                        </div>
             
                        <div class="md:flex md:items-right">
                            <div class="md:w-2/3">
                                <button type="submit" id="save" class="test shadow bg-green-500 hover:bg-green-800 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                                    Update
                                </button>
                                <a class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded text-decoration-none" href="@Url.Content("~/Employee/List")">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>

<script type="text/javascript">
    $(document).ready(function () {

        $('#save').click(function () {

            $('#addForm').validate({

                rules: {
                    Description: {
                        required: true
                    },

                    Email: {
                        required: true,
                        Email: true
                    }
                },
                messages: {
                    Description: {
                        required: "Please fill with description"
                    },

                    Email: {
                        required: "Please enter email address",
                        Email: "Please enter valid email"
                    }
                },
                highlight: function (element) {
                    $(element).addClass('redBorder').removeClass('border border-red-500');
                },
                unhighlight: function (element) {
                    $(element).removeClass('redBorder').addClass('border border-red-500');
                }

            });
            validateCountry();




        });
    });



    $('#Country_Id').change(function () {
        //alert($(this).val());
        var countryId = $(this).val();
        var Url = '@Url.Content("~/City/List/")' + countryId;
        //alert(Url);
        $.ajax({
            url: Url,
            type: 'GET',
            success: function (response) {
                //alert(response);
                $('#City_Id').html(response);
            },
            error: function () {
                //alert('Error');
            }

        });
        validateCountry();
    });

    function validateCountry() {
        var selectedCountry = $('#Country_Id').val();
        if (selectedCountry == 'Select Country') {
            $('#Country_Id').addClass('redBorder').removeClass('border border-red-500 focus:border-gray-600');
            $('#countryErr').removeClass('hide');
            return false;
        }
        else {
            $('#Country_Id').removeClass('redBorder').addClass('border border-red-500 ');
            $('#countryErr').addClass('hide');
            return true;
        }
    }
</script>
