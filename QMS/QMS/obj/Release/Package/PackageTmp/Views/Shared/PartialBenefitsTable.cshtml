@if (ViewBag.Benefits != null && ViewBag.Benefits.Count > 0)
{
    foreach (var benefit in ViewBag.Benefits)
    {

        <tr>
            <td class="border px-4 py-2"><input type="checkbox" name="chk" value="@benefit.Id" /></td>
            <td class="border px-4 py-2">@benefit.Title</td>
            <td class="border px-4 py-2"><input type="text" id="@("MaxBudget"+benefit.Id)" /></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="3" class="border px-4 py-4">
            No Record Found!
        </td>
    </tr>
}
