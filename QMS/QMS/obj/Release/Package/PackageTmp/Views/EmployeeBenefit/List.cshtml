
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/Layout.cshtml";
    var subModules = Session["subModules"] != null ? (List<HRMS.Data.SubModule>)Session["subModules"] : new List<HRMS.Data.SubModule>();
    int subModuleId = subModules.Where(m => m.Name == "Departments").FirstOrDefault().Id;
    bool canAdd = HRMS.Utilities.PermissionChecker.HasPermission(subModuleId, 2);
    bool canEdit = HRMS.Utilities.PermissionChecker.HasPermission(subModuleId, 3);
    bool canDelete = HRMS.Utilities.PermissionChecker.HasPermission(subModuleId, 4);
}

    <main class="bg-white-500 flex-1 p-3 overflow-hidden">
        <div class="flex flex-col">
            <!--Grid Form-->
            <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2">
                <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-full">
                    <div class="bg-gray-200 px-2 py-3 border-solid border-gray-200 border-b">
                        <span>EmployeeBenefits</span>
                        @if (canAdd)
                        {
                            <span style="float:right;">
                                @*<button class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded" onclick="AddJobTitle();">
                                        Add Job Title
                                    </button>*@
                                <a class="bg-green-500 hover:bg-green-800 text-white font-bold py-2 px-4 rounded" href="@Url.Content("~/EmployeeBenefit/Add")">
                                    Add EmployeeBenefit
                                </a>
                            </span>
                        }
                    </div>

                    <div class="row searchSection">
                        @using (Html.BeginForm("List", "EmployeeBenefit", FormMethod.Post))
                        {

                            <label class=" control-label px-4 py-2">Search</label>

                            <input type="text" name="search" placeholder="Search" class="border-1 border-gray-400 px-3 py-2 mt-2" />

                            <button class="btn btn-primary mb-2 ml-2" type="submit">
                                <i class="fa fa-search"></i>

                                Search
                            </button>



                        }

                    </div>

                    <div class="p-3">
                        <table  class="table-responsive w-full rounded">
                            <thead>
                                <tr>
                                    <th class="border w-2/6 px-4 py-2">Job Title</th>
                                    <th class="border w-2/6 px-4 py-2">Employee Benefit</th>

                                    <th class="border w-1/6 px-4 py-2">Maximum Budget</th>
                                    @*<th class="border w-1/6 px-4 py-2">Last Updated By</th>
                                        <th class="border w-1/6 px-4 py-2">Last Updated On</th>*@
                                    <th class="border w-1/6 px-4 py-2">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.EmployeeBenefits != null && ViewBag.EmployeeBenefits.Count > 0)
                                {
                                    foreach (var employeeBenefit in ViewBag.EmployeeBenefits)
                                    {

                                        var benifit = ((List<HRMS.Data.Benefit>)ViewBag.Benefits).Where(b => b.Id.Equals(employeeBenefit.Benefit_Id)).FirstOrDefault();
                                        var jobTitle = ((List<HRMS.Data.JobTitle>)ViewBag.JobTitles).Where(jt => jt.Id.Equals(employeeBenefit.JobTitle_Id)).FirstOrDefault();
                                        <tr>
                                            <td class="border px-4 py-2">@jobTitle.Title</td>
                                            <td class="border px-4 py-2">@benifit.Title</td>

                                            <td class="border px-4 py-2">@employeeBenefit.MaxBudget</td>
                                            @*<td class="border px-4 py-2">@department.LastUpdateOn</td>*@
                                            <td class="border px-4 py-2">
                                                @if (canEdit)
                                                {
                                                    <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-white" href="@Url.Content("~/EmployeeBenefit/Edit/" + employeeBenefit.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if (canDelete)
                                                {
                                                    <a class="bg-teal-300 cursor-pointer rounded p-1 mx-1 text-red-500" href="@Url.Content("~/EmployeeBenefit/Delete/" + employeeBenefit.Id)">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="border px-4 py-4">
                                            No Record Found!
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--/Grid Form-->
        </div>

       
    </main>
