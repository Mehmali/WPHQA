
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<main class="bg-white-500 flex-1 p-3 overflow-hidden">
    <div class="flex flex-col">
        <!--Grid Form-->
        <div class="flex flex-1  flex-col md:flex-row lg:flex-row mx-2">
            <div class="mb-2 border-solid border-gray-300 rounded border shadow-sm w-full">
                <div class="bg-gray-200 px-2 py-3 border-solid border-gray-200 border-b">
                    Add Employee Benefits
                </div>
                <div class="p-3">
                    <form id="frmEmployeeBenefits" class="w-full" method="post" action="@Url.Content("~/EmployeeBenefit/Add")">
                        <div class="flex flex-wrap -mx-3 mb-6">

                            <div class="w-full md:w-1/2 px-3">
                                <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                       for="JobTitle">
                                    Job Title
                                </label>
                                <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                        id="JobTitle_Id" name="JobTitle_Id">
                                    <option>Select Job Title</option>
                                    @foreach (var jobTitle in ViewBag.JobTitle)
                                    {
                                        <option value="@jobTitle.Id">@(jobTitle.Title)</option>
                                        @*<option value="@country.Id" @(country.Id == vcountry.Country_Id ? "selected" : "")>@(country.Name + "[" + country.Code + "]")</option>*@
                                    }
                                </select>
                                <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                            </div>

                            @*<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                           for="Title">
                                        Employee Benefit Title
                                    </label>
                                    <select class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                            id="Benefit_Id" name="Benefit_Id" multiple>
                                        <option>Select Benefits</option>

                                    </select>
                                    <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                                </div>


                                <div class="w-full md:w-1/2 px-3">
                                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-light mb-1"
                                           for="MaxBudget">
                                        Maximum Budget
                                    </label>
                                    <input class="appearance-none block w-full bg-gray-200 text-grey-darker border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white-500 focus:border-gray-600"
                                           id="MaxBudget" name="MaxBudget" type="text" placeholder="Enter Maximum Budget">
                                    <p class="text-red-500 text-xs italic">Please fill out this field.</p>
                                </div>*@

                        </div>

                        <div class="p-3">
                            <table class="table-responsive w-full rounded">
                                <thead>
                                    <tr>

                                        <th class="border w-1/4 px-4 py-2"></th>
                                        <th class="border w-1/3 px-4 py-2">Benefit Title</th>
                                        <th class="border w-1/3 px-4 py-2">Maximum Budget</th>

                                    </tr>
                                </thead>
                                <tbody id="Benefits_Table"></tbody>
                            </table>
                        </div>

                        <div class="md:flex md:items-right">
                            <div class="md:w-2/3">
                                <button type="submit" class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                                    Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--/Grid Form-->
    </div>
</main>
<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.min.js"></script>
<script type="text/javascript">
    $('#JobTitle_Id').change(function () {
        //alert($(this).val());
        var jobTitleId = $(this).val();
        var Url = '@Url.Content("~/Benefit/GetBenifitsByJobTitleId/")' + jobTitleId;
        //alert(Url);
        $.ajax({
        url: Url,
        type: 'GET',
        success: function (response) {
        //alert(response);
            $('#Benefits_Table').html(response);
        },
        error: function () {
        //alert('Error');
        }

        });
    });


    $('#frmEmployeeBenefits').submit(function (e) {
        //alert('submitted');
        e.preventDefault();

        var objEmpBenefits = [];

        $("input[name='chk']:checked").each(function () {
            var checkedValue = $(this).val();
            //alert(checkedValue);
            var benefit_Id = checkedValue;
            var jobTitle_Id = $('#JobTitle_Id').val();
            var maxBudget = $('#MaxBudget' + checkedValue).val();

            var objEmpBenefit = {
                Id: 0,
                Benefit_Id: benefit_Id,
                JobTitle_Id: jobTitle_Id,
                MaxBudget: maxBudget
            };

            //alert(JSON.stringify(objEmpBenefit));
            objEmpBenefits.push(objEmpBenefit);
        });

        //alert(JSON.stringify(objEmpBenefits));

        $.ajax({
            type : "POST",
            url : "@Url.Content("~/EmployeeBenefit/Add")",
            data: JSON.stringify(objEmpBenefits),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                //alert(data);
                if (data == 0) {
                    alert('Unable to set permission!');
                }
                else {
                    window.location.href = '../EmployeeBenefit/List';
                }
            }
        });
    });

</script>